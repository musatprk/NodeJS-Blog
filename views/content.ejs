<%-include('./inc/header') %>
  <div class="card justify-content-center bg-dark" style="witdh: 18rem; ">
    <h5 class="card-header text-light">
      <%= a[0].chd %>
    </h5>
    <div class="card-body">
      <p class="card-text text-light">
        <%= a[0].con %>
      </p>
    </div>
  </div>
  <br>
  <div class="container-fluid  bg-dark">
    <h2 class="text-light text-center">Yorumlar</h2>
    <% a.forEach(function(i) { %>
      <h4 class="text-light">
        <%= i.comname%>
      </h4>
      <p class="text-light">
        <%= i.comment %>
      </p>
      <% }); %>
        <form action="/comment" method="POST">
          <div class="main bg-dark mt-5">
            <div class="col-md-6 ">
              <div class="mb-3 bg-dark">
                <input type="hidden" name="id" value="<%= a[0].cid %>">
                <label for="exampleFormControlInput1" class="form-label text-light">Kullanıcı Adı</label>
                <input type="text" name="nick" class="form-control" id="exampleFormControlInput1">
              </div>
              <div class="mt-3 bg-dark">
                <label for="exampleFormControlTextarea1" class="form-label text-light">Yorumunuz</label>
                <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
                <button type="submit" class="btn btn-secondary">Yorumu Ekle</button>
              </div>
            </div>
          </div>
        </form>
  </div>
  <%-include('./inc/footer') %>