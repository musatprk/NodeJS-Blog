<%-include('./inc/header') %>
    <form action="/contact" method="POST">
      <div class="form-group text-light">
        <label for="email ">Email adresiniz:</label>
        <input type="email" name="email" class="form-control bg-light" id="email">
      </div>
      <div class="form-group text-light">
        <label for="pwd">Bana Yazın :</label>
        <textarea class="form-control" name="message" rows="10" cols="70" id="pwd"> </textarea>
      </div>
      <div class="checkbox">
        <label class="text-light"><input type="checkbox">Beni Hatırla</label>
      </div>
      <button type="submit" class="btn btn-light mb-3 ">Gönder</button>
    </form>
    <h4 class="text-light mt-2">
      <%=a %>
    </h4>
 
  <%-include('./inc/footer') %>